import static java.lang.System.*;

public class AtCounter
{
   private char[][] atMat;
   private int atCount;

	public AtCounter()
	{
		atCount=0;
		atMat = new char[][]	   {{'@','-','@','-','-','@','-','@','@','@'},
									{'@','@','@','-','@','@','-','@','-','@'},
									{'-','-','-','-','-','-','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','-','@'},
									{'-','@','-','@','-','@','-','@','-','@'},
									{'@','@','@','@','@','@','-','@','@','@'},
									{'-','@','-','@','-','@','-','-','-','@'},
									{'-','@','@','@','-','@','-','-','-','-'},
									{'-','@','-','@','-','@','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','@','@'}};
	}

	public int countAts(int r, int c)
	{
		if(r >= 0 && r <= 9 && c >= 0 && c <= 9 && atMat[r][c] == '@'){
			atMat[r][c] = '!';
			if(atMat[r + 1][c] == '@'){
				return 1 + countAts(r + 1, c);
			}else if(atMat[r][c + 1] == '@'){
				return 1 + countAts(r, c + 1);
			}else if(atMat[r][c - 1] == '@'){
				return 1 + countAts(r, c - 1);
			}else if(atMat[r - 1][c] == '@'){
				return 1 + countAts(r - 1, c);
			}else{
				return 1;
			}
		}
		//add in recursive code to count up the # of @s connected
		//start checking at spot [r,c]

		return 0;
	}

	public int getAtCount()
	{
		int r = 0;
		int c = 0;
		for(int i = 0; i < atMat.length; i++){
			for(int j = 0; j < atMat.length; j++){
				if(atMat[i][j] == '!'){
					r = i;
					c = j;
				}
			}
		}
		return countAts(r, c);
	}

	public String toString()
	{
		int r = 0;
		int c = 0;
		for(int i = 0; i < atMat.length; i++){
			for(int j = 0; j < atMat.length; j++){
				if(atMat[i][j] == '!'){
					r = i;
					c = j;
				}
			}
		}
		String output="";
		output += "" + r + c + " ";
		output+=getAtCount()+" @s connected.";
		return output;
	}
}